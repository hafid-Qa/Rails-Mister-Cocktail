<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/background.png);">
  <div class="container text-center">
    <h1><strong><%= @cocktail.name.upcase %></strong></h1>
    <%# <p>Change your life and learn to code at one of our campuses around the world.</p>
    <a class="btn btn-flat" href="#">Apply now</a> %>
  </div>
</div>
<div class="container">
  <table class="table table-striped">
    <tbody>
      <tr>
        <td>ingredient</td>
        <td>Dose</td>
      </tr>
      <% @cocktail.doses.each do |dose| %>
        <tr>
          <td><%= dose.ingredient.name %></td>
          <td><%= dose.description  %></td>
          <td>
            <%= link_to "Delete", dose_path(dose),data: {turbo_method: :delete, turbo_confirm: "Removing #{dose.ingredient.name } "},class: "btn btn-outline-danger btn-sm" %>
            <%# <i class="fa-solid fa-trash card-trip-user"></i> %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%= simple_form_for [@cocktail,@dose] do |f| %>
  <%= f.input :description %>
  <%= f.association :ingredient, include_blank: false, collection: @ingredients %>
  <%= f.button :submit, class: "btn btn-success" %>
<% end %>
