<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= @cocktail.photo.attached? ? cl_image_path(@cocktail.photo.key) : 'https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTPQDYau3Hs4-xw1i8jVSUY4BlF4FLmg8lQqg&usqp=CAU' %>)">
  <div class="container text-center">
    <h1><strong><%= @cocktail.name.upcase %></strong></h1>
    <%# <p>Change your life and learn to code at one of our campuses around the world.</p>
    <a class="btn btn-flat" href="#">Apply now</a> %>
  </div>
</div>
<div class="container">
  <table class="table table-striped">
    <tbody>
      <tr>
        <td>ingredient</td>
        <td>Dose</td>
      </tr>
      <% @cocktail.doses.each do |dose| %>
        <tr>
          <td><%= dose.ingredient.name %></td>
          <td><%= dose.description  %></td>
          <td>
            <%= link_to "Delete", dose_path(dose),data: {turbo_method: :delete, turbo_confirm: "Removing #{dose.ingredient.name } "},class: "btn btn-outline-danger btn-sm" %>
            <%# <i class="fa-solid fa-trash card-trip-user"></i> %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
  Launch demo modal
</button>
<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h3 class="modal-title fs-5" id="exampleModalLabel">Add ingredient</h3>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= render 'form' %>
      </div>
    </div>
  </div>
</div>
